{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext", // ★ tsx 実行を想定
        "moduleResolution": "Node",
        "esModuleInterop": true, // ★ import express from 'express' を許可
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ],
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
        "**/*.ts"
    ]
}